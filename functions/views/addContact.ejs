<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Add Contact | Email Application</title>
<%- include('components/meta') %> <%- include('components/link') %>
	</head>

	<body>
		<div class="wrapper">
			<%- include('sidebar') %>
			<div class="main-panel">
				<nav class="navbar navbar-default">
					<div class="container-fluid">
						<div class="navbar-minimize">
							<button
								id="minimizeSidebar"
								class="btn btn-fill btn-icon"
							>
								<i class="ti-more-alt"></i>
							</button>
						</div>
						<div class="navbar-header">
							<button type="button" class="navbar-toggle">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar bar1"></span>
								<span class="icon-bar bar2"></span>
								<span class="icon-bar bar3"></span>
							</button>
							<a class="navbar-brand" href="#userpage"
								>Add contact</a
							>
						</div>
						<div class="collapse navbar-collapse">
							<ul class="nav navbar-nav navbar-right">
								<li>
									<a href="/signOut">
										Sign Out
									</a>
								</li>
							</ul>
						</div>
					</div>
				</nav>
				<div class="content">
					<div class="container-fluid">
						<div class="row">
							<div class="col-lg-8 col-md-7">
								<div class="card">
									<div class="card-header">
										<h4 class="card-title">
											Add Information
										</h4>
									</div>
									<div class="card-content">
										<form
											id="allInputsFormValidation"
											method="POST"
											action="/onAddContact"
										>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label for="DOB"
															>Date of
															Birth</label
														>
														<input
															id="DOB"
															type="date"
															name="DOB"
															class="form-control border-input"
															autocomplete="bday"
															autofocus
														/>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label
															for="emailAddress"
															>Email
															Address</label
														>
														<input
															id="emailAddress"
															type="email"
															name="emailAddress"
															class="form-control border-input"
															autocomplete="email"
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label for="countryCode"
															>Country Code</label
														>
														<input
															id="countryCode"
															type="tel"
															name="countryCode"
															class="form-control border-input"
															autocomplete="tel-country-code"
														/>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label for="mobile"
															>Mobile
															number</label
														>
														<input
															id="mobile"
															type="tel"
															name="mobile"
															class="form-control border-input"
															autocomplete="tel-national"
															pattern="^[6-9]\d{9}$"
															title="10 digit mobile number"
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label for="firstName"
															>First Name</label
														>
														<input
															id="firstName"
															type="text"
															class="form-control border-input"
															placeholder="First Name"
															name="firstName"
															autocomplete="given-name"
														/>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label for="lastName"
															>Last Name</label
														>
														<input
															id="lastName"
															type="text"
															class="form-control border-input"
															placeholder="Last Name"
															name="lastName"
															autocomplete="family-name"
														/>
													</div>
												</div>
											</div>
											<div class="text-center">
												<button
													type="submit"
													class="btn btn-info btn-fill btn-wd"
												>
													Add Contact
												</button>
											</div>
											<div class="clearfix"></div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<%- include('components/footer') %>
			</div>
		</div>
		<%- include('components/scripts') %>
		<script>
			$().ready(() => {
				$("#registerFormValidation").validate();
				$("#loginFormValidation").validate();
				$("#allInputsFormValidation").validate();
			});
			$("#emailAddress").change(() => {
				var payload = {
					checkEmail: document.getElementById("emailAddress").value,
				};
				fetch("/userQuery", {
					method: "POST",
					body: new URLSearchParams($.param(payload)),
				})
					.then((response) => {
						if (response.status !== 200) {
							alert(
								"Looks like there was a problem. Status Code: " +
									response.status
							);
							return;
						}
						response.text().then((data) => {
							if (data != "User exists") {
								document.getElementById("emailAddress").value =
									"";
								alert(
									"User does not exist! Please recheck email."
								);
							}
						});
					})
					.catch((err) => {
						alert("Fetch Error :-S", err);
					});
			});
		</script>
	</body>
</html>
