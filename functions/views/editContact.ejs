<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Edit Contact | Email Application</title>
		<%- include('components/meta') %> <%- include('components/link') %>
	</head>

	<body>
		<div class="wrapper">
			<%- include('components/sidebar') %>
			<div class="main-panel">
				<nav class="navbar navbar-default">
					<div class="container-fluid">
						<div class="navbar-minimize">
							<button
								id="minimizeSidebar"
								class="btn btn-fill btn-icon"
							>
								<i class="ti-more-alt"></i>
							</button>
						</div>
						<div class="navbar-header">
							<button type="button" class="navbar-toggle">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar bar1"></span>
								<span class="icon-bar bar2"></span>
								<span class="icon-bar bar3"></span>
							</button>
							<a class="navbar-brand" href="#userpage"
								>Add contact</a
							>
						</div>
					</div>
				</nav>
				<div class="content">
					<div class="container-fluid">
						<div class="row">
							<div class="col-lg-8 col-md-7">
								<div class="card">
									<div class="card-header">
										<h4 class="card-title">
											Add Information
										</h4>
									</div>
									<div class="card-content">
										<form
											method="POST"
											action="/onEditContact"
										>
											<input
												type="text"
												name="contactID"
												value="<%- contactID -%>"
												hidden
											/>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label for="DOB"
															>Date of
															Birth</label
														>
														<input
															id="DOB"
															type="date"
															name="DOB"
															class="form-control border-input"
															autocomplete="bday"
															value="<%- userProfile.DOB -%>"
															autofocus
															required
														/>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label
															for="emailAddress"
															>Email
															Address</label
														>
														<input
															id="emailAddress"
															type="email"
															name="emailAddress"
															class="form-control border-input"
															autocomplete="email"
															required
															value="<%- userProfile.emailAddress -%>"
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label for="countryCode"
															>Country Code</label
														>
														<input
															id="countryCode"
															type="tel"
															name="countryCode"
															required
															class="form-control border-input"
															autocomplete="tel-country-code"
															value="<%- userProfile.countryCode -%>"
														/>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label for="mobile"
															>Mobile
															number</label
														>
														<input
															id="mobile"
															type="tel"
															name="mobile"
															required
															class="form-control border-input"
															autocomplete="tel-national"
															value="<%- userProfile.mobile -%>"
															pattern="^[6-9]\d{9}$"
															
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label for="firstName"
															>First Name</label
														>
														<input
															id="firstName"
															type="text"
															required
															class="form-control border-input"
															placeholder="First Name"
															name="firstName"
															autocomplete="given-name"
															value="<%- userProfile.firstName -%>"
														/>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label for="lastName"
															>Last Name</label
														>
														<input
															id="lastName"
															type="text"
															required
															class="form-control border-input"
															placeholder="Last Name"
															name="lastName"
															autocomplete="family-name"
															value="<%- userProfile.lastName -%>"
														/>
													</div>
												</div>
											</div>
											<div class="text-center">
												<button
													type="submit"
													class="btn btn-info btn-fill btn-wd"
												>
													Edit Contact Information
												</button>
											</div>
											<div class="clearfix"></div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<%- include('components/footer') %>
			</div>
		</div>
		<%- include('components/scripts') %>
		<script>
			$().ready(() => {
				$("#registerFormValidation").validate();
				$("#loginFormValidation").validate();
				$("#allInputsFormValidation").validate();
			});
			$("#emailAddress").change(() => {
				var payload = {
					checkEmail: document.getElementById("emailAddress").value,
				};
				fetch("/userQuery", {
					method: "POST",
					body: new URLSearchParams($.param(payload)),
				})
					.then((response) => {
						if (response.status !== 200) {
							alert(
								"Looks like there was a problem. Status Code: " +
									response.status
							);
							return;
						}
						response.text().then((data) => {
							if (data != "User exists") {
								document.getElementById("emailAddress").value =
									"";
								alert(
									"User does not exist! Please recheck email."
								);
							}
						});
					})
					.catch((err) => {
						alert("Fetch Error :-S", err);
					});
			});
		</script>
	</body>
</html>
